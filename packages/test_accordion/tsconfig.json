{
  "extends": "../../tsconfig.json",
  "include": ["src"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "jsxFactory": "React.createElement",
    "declarationDir": "dist",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFragmentFactory": "React.Fragment"
  },
  "exclude": [
    "node_modules",
    "build",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.spec.tsx"
  ]
}
